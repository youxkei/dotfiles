set $mod Mod1

font pango:Monospace 13

floating_modifier $mod

focus_follows_mouse yes

bindsym $mod+Shift+Return  exec i3-sensible-terminal
bindsym $mod+Shift+q       kill
bindsym $mod+d             exec rofi -show run -font "Monospace 14" -matching fuzzy

bindsym $mod+h exec --no-startup-id $HOME/.i3/move.sh "focus left"
bindsym $mod+j exec --no-startup-id $HOME/.i3/move.sh "focus down"
bindsym $mod+k exec --no-startup-id $HOME/.i3/move.sh "focus up"
bindsym $mod+l exec --no-startup-id $HOME/.i3/move.sh "focus right"
bindsym $mod+a exec --no-startup-id $HOME/.i3/move.sh "focus parent"
bindsym $mod+z exec --no-startup-id $HOME/.i3/move.sh "focus child"

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+n split h
bindsym $mod+v split v

bindsym $mod+f fullscreen

bindsym $mod+w layout tabbed
bindsym $mod+s layout toggle split

bindsym $mod+Shift+space floating toggle

bindsym $mod+1 exec --no-startup-id $HOME/.i3/move.sh "workspace 1"
bindsym $mod+2 exec --no-startup-id $HOME/.i3/move.sh "workspace 2"
bindsym $mod+3 exec --no-startup-id $HOME/.i3/move.sh "workspace 3"
bindsym $mod+4 exec --no-startup-id $HOME/.i3/move.sh "workspace 4"
bindsym $mod+5 exec --no-startup-id $HOME/.i3/move.sh "workspace 5"
bindsym $mod+6 exec --no-startup-id $HOME/.i3/move.sh "workspace 6"
bindsym $mod+7 exec --no-startup-id $HOME/.i3/move.sh "workspace 7"
bindsym $mod+8 exec --no-startup-id $HOME/.i3/move.sh "workspace 8"
bindsym $mod+9 exec --no-startup-id $HOME/.i3/move.sh "workspace 9"
bindsym $mod+0 exec --no-startup-id $HOME/.i3/move.sh "workspace 10"

bindsym $mod+Shift+1 exec --no-startup-id $HOME/.i3/move.sh "move container to workspace 1"
bindsym $mod+Shift+2 exec --no-startup-id $HOME/.i3/move.sh "move container to workspace 2"
bindsym $mod+Shift+3 exec --no-startup-id $HOME/.i3/move.sh "move container to workspace 3"
bindsym $mod+Shift+4 exec --no-startup-id $HOME/.i3/move.sh "move container to workspace 4"
bindsym $mod+Shift+5 exec --no-startup-id $HOME/.i3/move.sh "move container to workspace 5"
bindsym $mod+Shift+6 exec --no-startup-id $HOME/.i3/move.sh "move container to workspace 6"
bindsym $mod+Shift+7 exec --no-startup-id $HOME/.i3/move.sh "move container to workspace 7"
bindsym $mod+Shift+8 exec --no-startup-id $HOME/.i3/move.sh "move container to workspace 8"
bindsym $mod+Shift+9 exec --no-startup-id $HOME/.i3/move.sh "move container to workspace 9"
bindsym $mod+Shift+0 exec --no-startup-id $HOME/.i3/move.sh "move container to workspace 10"

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart


bindsym XF86MonBrightnessDown exec --no-startup-id $HOME/.zplug/bin/light -U 2.0
bindsym XF86MonBrightnessUp   exec --no-startup-id $HOME/.zplug/bin/light -A 2.0

bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2%
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute   @DEFAULT_SINK@ toggle

gaps inner 20

set $out "(L)ock, (E)xit, (S)uspend, (H)ibernate, (R)eboot, (P)oweroff"
bindsym $mod+Shift+e mode $out
mode $out {
    bindsym e exit, mode "default"

    bindsym l exec --no-startup-id gnome-screensaver-command -l, mode "default"
    bindsym s exec --no-startup-id systemctl suspend,            mode "default"
    bindsym h exec --no-startup-id systemctl hibernate,          mode "default"
    bindsym r exec --no-startup-id systemctl reboot,             mode "default"
    bindsym p exec --no-startup-id systemctl poweroff,           mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"
mode "resize" {
    bindsym w resize grow   width  1 px or 1 ppt
    bindsym n resize shrink width  1 px or 1 ppt
    bindsym t resize grow   height 1 px or 1 ppt
    bindsym s resize shrink height 1 px or 1 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bar {
    status_command i3status | $HOME/.i3/add_status
    position top
    binding_mode_indicator yes

    font pango:Monospace 16

    tray_output primary
}

set_from_resource $left_monitor   i3wm.left_monitor
set_from_resource $center_monitor i3wm.center_monitor
set_from_resource $right_monitor  i3wm.right_monitor

workspace  1 output $left_monitor
workspace  2 output $center_monitor
workspace  3 output $center_monitor
workspace  4 output $center_monitor
workspace  5 output $center_monitor
workspace  6 output $right_monitor
workspace  7 output $right_monitor
workspace  8 output $right_monitor
workspace  9 output $right_monitor
workspace 10 output $right_monitor

for_window [class="Google-chrome" instance="crx_nckgahadagoaajjgafhacjanaoiihapd"] floating enable
for_window [class="Google-chrome" instance="crx_gjjpophepkbhejnglcmkdnncmaanojkf"] floating enable

new_window pixel 16

exec --no-startup-id xset -dpms

exec --no-startup-id /usr/lib/gnome-settings-daemon/gsd-xsettings
exec --no-startup-id gnome-power-manager
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id gnome-flashback
exec --no-startup-id sudo nm-applet
exec_always --no-startup-id sleep 1s; feh --bg-scale /usr/share/backgrounds/warty-final-ubuntu.png
exec --no-startup-id /bin/sh -c 'eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)'
exec --no-startup-id compton
exec --no-startup-id sleep 2s; guake

exec --no-startup-id sleep 1s; nvim-qt
exec --no-startup-id sleep 1s; google-chrome
